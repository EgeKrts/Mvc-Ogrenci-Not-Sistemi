
@using OgrenciNotMvc.Models.EntityFramework
@model List<Tbl_Kulüpler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table-bordered" width="100%">
    <tr>
        <th>Kulüp ID</th>
        <th>Kulüp ADI</th>
        <th>İşlemler</th>

    </tr>

    <tbody>
        @foreach (var kulup in Model)
        {
            <tr>
                <td>@kulup.KulüpId</td>
                <td>@kulup.KulüpAd</td>
                <td><a href="/Kulüp/Sil/@kulup.KulüpId" class="btn btn-danger">Sil</a>
                <a href="/Kulüp/KulüpGetir/@kulup.KulüpId" class="btn btn-success">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/Kulüp/KulupEkle" class="btn btn-info">Kulüp Ekle</a>