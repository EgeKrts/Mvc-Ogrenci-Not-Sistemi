@using OgrenciNotMvc.Models.EntityFramework
@model List<Tbl_Notlar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table-bordered" width="100%">
    <tr>
        <th>NOT ID</th>
        <th>ÖĞRENCİ</th>
        <th>DERS</th>
        <th>SINAV1</th>
        <th>SINAV2</th>
        <th>SINAV3</th>
        <th>PROJE</th>
        <th>ORTALAMA</th>
        <th>DURUM</th>
        <th>İŞLEMLER</th>
    </tr>

    <tbody>
        @foreach (var not in Model)
        {
            <tr>
                <td>@not.NotId</td>
                <td>@not.Tbl_Ogrenciler.OgrAd @not.Tbl_Ogrenciler.OgrSoyad</td>
                <td>@not.Tbl_Dersler.DersAd</td>
                <td>@not.Sinav1</td>
                <td>@not.Sinav2</td>
                <td>@not.Sinav3</td>
                <td>@not.Proje</td>
                <td>@not.Ortalama</td>
                <td>@not.Durum</td>
                <td><a href="/Sinavlar/NotGetir/@not.NotId" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </tbody>
</table>


<a href="/Sinavlar/NotEkle" class="btn btn-primary">Yeni Sınav Girişi</a>